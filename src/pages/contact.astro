---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION, SOCIAL_LINKS } from '../consts';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={`Contact | ${SITE_TITLE}`} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main>
			<h1>Contact</h1>

			<div class="contact-grid">
				<div class="contact-info">
					<section class="contact-details">
						<h2>Contact Information</h2>
						<div class="info-card">
							<div class="info-item">
								<h3>Email</h3>
								<p><a href={`mailto:${SOCIAL_LINKS.email}`}>{SOCIAL_LINKS.email}</a></p>
							</div>
							<div class="info-item">
								<h3>Office</h3>
								<p>Building Name, Room XXX<br>University Name<br>City, State ZIP</p>
							</div>
							<div class="info-item">
								<h3>Office Hours</h3>
								<p>Monday: 2:00 PM - 4:00 PM<br>Wednesday: 10:00 AM - 12:00 PM<br>Or by appointment</p>
							</div>
						</div>
					</section>

					<section class="affiliations">
						<h2>Academic Affiliations</h2>
						<div class="affiliation-card">
							<div class="affiliation">
								<h3>Primary Department</h3>
								<p>Department Name<br>University Name</p>
							</div>
							<div class="affiliation">
								<h3>Research Center</h3>
								<p>Center Name<br>University Name</p>
							</div>
						</div>
					</section>
				</div>

				<section class="contact-form">
					<h2>Send a Message</h2>
					<form class="message-form">
						<div class="form-group">
							<label for="name">Name</label>
							<input type="text" id="name" name="name" required>
						</div>
						<div class="form-group">
							<label for="email">Email</label>
							<input type="email" id="email" name="email" required>
						</div>
						<div class="form-group">
							<label for="subject">Subject</label>
							<input type="text" id="subject" name="subject" required>
						</div>
						<div class="form-group">
							<label for="message">Message</label>
							<textarea id="message" name="message" rows="5" required></textarea>
						</div>
						<button type="submit" class="submit-btn">Send Message</button>
					</form>
				</section>
			</div>

			<section class="map">
				<h2>Location</h2>
				<div class="map-placeholder">
					<p>Interactive map will be embedded here</p>
				</div>
			</section>
		</main>
		<Footer />
	</body>
</html>

<style>
	.contact-grid {
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: 2em;
		margin: 2em 0;
	}

	section {
		margin: 2em 0;
	}

	.info-card, .affiliation-card {
		background-color: white;
		padding: 1.5em;
		border-radius: 8px;
		box-shadow: var(--box-shadow);
	}

	.info-item, .affiliation {
		margin-bottom: 1.5em;
	}

	.info-item:last-child, .affiliation:last-child {
		margin-bottom: 0;
	}

	.info-item h3, .affiliation h3 {
		color: var(--accent);
		margin-bottom: 0.5em;
	}

	.message-form {
		background-color: white;
		padding: 1.5em;
		border-radius: 8px;
		box-shadow: var(--box-shadow);
	}

	.form-group {
		margin-bottom: 1em;
	}

	label {
		display: block;
		margin-bottom: 0.5em;
		color: rgb(var(--gray-dark));
	}

	input, textarea {
		width: 100%;
		padding: 0.5em;
		border: 1px solid rgb(var(--gray-light));
		border-radius: 4px;
		font-size: 1em;
	}

	.submit-btn {
		background-color: var(--accent);
		color: white;
		padding: 0.8em 1.5em;
		border: none;
		border-radius: 4px;
		cursor: pointer;
		font-size: 1em;
		transition: background-color 0.2s;
	}

	.submit-btn:hover {
		background-color: var(--accent-dark);
	}

	.map-placeholder {
		background-color: rgb(var(--gray-light));
		height: 300px;
		border-radius: 8px;
		display: flex;
		align-items: center;
		justify-content: center;
		color: rgb(var(--gray));
	}

	@media (max-width: 720px) {
		.contact-grid {
			grid-template-columns: 1fr;
		}
	}
</style>