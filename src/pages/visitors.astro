---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={`Visitors | ${SITE_TITLE}`} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main>
			<div class="page-header">
				<h1>Visitor Map</h1>
				<p class="page-subtitle">Welcome visitors from around the world</p>
			</div>

			<section class="visitor-stats">
				<div class="stats-grid">
					<div class="stat-card">
						<h3>Global Reach</h3>
						<p>Track visitors accessing this academic website from different countries and regions worldwide.</p>
					</div>
				</div>
			</section>

			<section class="visitor-map">
				<h2>Live Visitor Map</h2>
				<div class="map-container">
					<script type="text/javascript" id="clstr_globe" src="//clustrmaps.com/globe.js?d=mqxPVyUtzNiz2DjQDTnSzPoBxM9WYqWGUa68l5PpBcc"></script>
				</div>
			</section>

			<section class="map-info">
				<h2>About Visitor Tracking</h2>
				<div class="info-grid">
					<div class="info-card">
						<h3>Privacy Focused</h3>
						<p>Visitor maps track general geographic location (country/region) without collecting personal information. All data is aggregated and anonymous.</p>
					</div>
					<div class="info-card">
						<h3>Real-time Statistics</h3>
						<p>See real-time visitor statistics including page views, unique visitors, and geographic distribution of your audience.</p>
					</div>
					<div class="info-card">
						<h3>Academic Reach</h3>
						<p>Understand the global impact of your research and academic work by seeing where your visitors are coming from.</p>
					</div>
				</div>
			</section>
		</main>
		<Footer />
	</body>
</html>

<style>
	.page-header {
		text-align: center;
		margin-bottom: 3em;
		padding: 2em 0;
		border-bottom: 1px solid rgb(var(--gray-light));
	}

	.page-header h1 {
		margin-bottom: 0.5em;
		color: rgb(var(--black));
	}

	.page-subtitle {
		font-size: 1.2em;
		color: rgb(var(--gray));
		margin: 0;
		font-style: italic;
	}

	section {
		margin: 3em 0;
	}

	.stats-grid {
		display: grid;
		grid-template-columns: 1fr;
		gap: 2em;
		margin-top: 2em;
	}

	.stat-card {
		background-color: white;
		padding: 2em;
		border-radius: 12px;
		box-shadow: var(--box-shadow);
		text-align: center;
	}

	.stat-card h3 {
		color: var(--accent);
		margin-bottom: 1em;
		font-size: 1.4em;
	}

	.stat-card p {
		color: rgb(var(--gray-dark));
		line-height: 1.6;
		margin: 0;
		font-size: 1.1em;
	}

	.map-container {
		background-color: white;
		border-radius: 12px;
		overflow: hidden;
		box-shadow: var(--box-shadow);
		min-height: 400px;
		display: flex;
		align-items: center;
		justify-content: center;
	}

	.map-placeholder {
		width: 100%;
		padding: 3em 2em;
		background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
		color: white;
	}

	.placeholder-content {
		max-width: 700px;
		margin: 0 auto;
	}

	.placeholder-content h3 {
		margin-bottom: 1em;
		font-size: 1.8em;
		text-align: center;
	}

	.placeholder-content p {
		margin-bottom: 1em;
		line-height: 1.6;
	}

	.placeholder-content ol {
		margin: 1.5em 0;
		padding-left: 2em;
		line-height: 1.8;
	}

	.placeholder-content li {
		margin-bottom: 0.8em;
	}

	.placeholder-content a {
		color: #ffd700;
		text-decoration: underline;
		font-weight: 600;
	}

	.placeholder-content a:hover {
		color: #ffed4e;
	}

	.placeholder-content code {
		background-color: rgba(0, 0, 0, 0.3);
		padding: 0.2em 0.5em;
		border-radius: 4px;
		font-family: 'Courier New', monospace;
		font-size: 0.9em;
	}

	.placeholder-content pre {
		background-color: rgba(0, 0, 0, 0.4);
		padding: 1em;
		border-radius: 8px;
		overflow-x: auto;
		margin: 1em 0;
	}

	.placeholder-content pre code {
		background-color: transparent;
		padding: 0;
		font-size: 0.85em;
		line-height: 1.5;
		display: block;
	}

	.note {
		font-size: 0.95em;
		margin-top: 1.5em;
	}

	.info-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
		gap: 2em;
		margin-top: 2em;
	}

	.info-card {
		background-color: white;
		padding: 2em;
		border-radius: 12px;
		box-shadow: var(--box-shadow);
		text-align: center;
	}

	.info-card h3 {
		color: var(--accent);
		margin-bottom: 1em;
		font-size: 1.2em;
	}

	.info-card p {
		color: rgb(var(--gray-dark));
		line-height: 1.6;
		margin: 0;
	}

	@media (max-width: 768px) {
		.page-header {
			padding: 1em 0;
			margin-bottom: 2em;
		}

		.stats-grid, .info-grid {
			grid-template-columns: 1fr;
			gap: 1.5em;
		}

		.stat-card, .info-card {
			padding: 1.5em;
		}

		.map-placeholder {
			padding: 2em 1.5em;
		}

		.placeholder-content h3 {
			font-size: 1.4em;
		}

		.placeholder-content ol {
			padding-left: 1.5em;
		}

		section {
			margin: 2em 0;
		}
	}
</style>
