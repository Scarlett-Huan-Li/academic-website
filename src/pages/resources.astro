---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={`Resources | ${SITE_TITLE}`} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main>
			<h1>Resources</h1>

			<section class="research-tools">
				<h2>Research Tools</h2>
				<div class="tools-grid">
					{Array(4).fill(null).map((_, i) => (
						<div class="tool-card">
							<h3>Tool Name {i + 1}</h3>
							<p>Description of the research tool and its applications.</p>
							<div class="tool-links">
								<a href="#" class="tool-link">Documentation</a>
								<a href="#" class="tool-link">Download</a>
							</div>
						</div>
					))}
				</div>
			</section>

			<section class="datasets">
				<h2>Datasets</h2>
				<div class="dataset-list">
					{Array(3).fill(null).map((_, i) => (
						<div class="dataset-card">
							<h3>Dataset Title {i + 1}</h3>
							<p>Description of the dataset and its potential applications.</p>
							<div class="dataset-meta">
								<span>Size: XX MB</span>
								<span>Format: CSV</span>
								<span>Last Updated: 2024</span>
							</div>
							<div class="dataset-links">
								<a href="#" class="dataset-link">Download</a>
								<a href="#" class="dataset-link">Documentation</a>
								<a href="#" class="dataset-link">Citation</a>
							</div>
						</div>
					))}
				</div>
			</section>

			<section class="code">
				<h2>Code Repositories</h2>
				<div class="code-grid">
					{Array(3).fill(null).map((_, i) => (
						<div class="code-card">
							<h3>Repository Name {i + 1}</h3>
							<p>Description of the code repository and its purpose.</p>
							<div class="code-meta">
								<span>Language: Python</span>
								<span>License: MIT</span>
							</div>
							<div class="code-links">
								<a href="#" class="code-link">GitHub</a>
								<a href="#" class="code-link">Documentation</a>
							</div>
						</div>
					))}
				</div>
			</section>

			<section class="tutorials">
				<h2>Tutorials and Guides</h2>
				<div class="tutorials-list">
					{Array(3).fill(null).map((_, i) => (
						<div class="tutorial-card">
							<h3>Tutorial Title {i + 1}</h3>
							<p>Brief description of the tutorial content.</p>
							<div class="tutorial-meta">
								<span>Difficulty: Intermediate</span>
								<span>Duration: 30 mins</span>
							</div>
							<a href="#" class="tutorial-link">View Tutorial</a>
						</div>
					))}
				</div>
			</section>
		</main>
		<Footer />
	</body>
</html>

<style>
	section {
		margin: 2em 0;
		padding: 1em 0;
		border-top: 1px solid rgb(var(--gray-light));
	}

	.tools-grid, .code-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
		gap: 1.5em;
		margin-top: 1em;
	}

	.tool-card, .dataset-card, .code-card, .tutorial-card {
		padding: 1.5em;
		background-color: white;
		border-radius: 8px;
		box-shadow: var(--box-shadow);
	}

	.dataset-list, .tutorials-list {
		display: grid;
		gap: 1.5em;
		margin-top: 1em;
	}

	.tool-links, .dataset-links, .code-links {
		margin-top: 1em;
		display: flex;
		gap: 1em;
	}

	.tool-link, .dataset-link, .code-link {
		padding: 0.3em 0.8em;
		background-color: rgb(var(--gray-light));
		border-radius: 4px;
		text-decoration: none;
		color: rgb(var(--gray-dark));
		font-size: 0.9em;
		transition: background-color 0.2s;
	}

	.tool-link:hover, .dataset-link:hover, .code-link:hover {
		background-color: rgb(var(--gray));
		color: white;
	}

	.dataset-meta, .code-meta, .tutorial-meta {
		margin: 1em 0;
		display: flex;
		gap: 1em;
		flex-wrap: wrap;
	}

	.dataset-meta span, .code-meta span, .tutorial-meta span {
		padding: 0.2em 0.5em;
		background-color: rgb(var(--gray-light));
		border-radius: 4px;
		font-size: 0.9em;
		color: rgb(var(--gray-dark));
	}

	.tutorial-link {
		display: inline-block;
		margin-top: 1em;
		padding: 0.5em 1em;
		background-color: var(--accent);
		color: white;
		border-radius: 4px;
		text-decoration: none;
		transition: background-color 0.2s;
	}

	.tutorial-link:hover {
		background-color: var(--accent-dark);
	}
</style>