---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={`Publications | ${SITE_TITLE}`} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main>
			<div class="page-header">
				<h1>Publications</h1>
				<p class="page-subtitle">Peer-reviewed articles, book chapters, and conference proceedings</p>
			</div>
			
			<div class="metrics">
				<div class="metric-card">
					<span class="metric-number">40+</span>
					<span class="metric-label">Publications</span>
				</div>
				<div class="metric-card">
					<span class="metric-number">900</span>
					<span class="metric-label">Citations</span>
				</div>
				<div class="metric-card">
					<span class="metric-number">16</span>
					<span class="metric-label">h-index</span>
				</div>
				<div class="metric-card">
					<span class="metric-number">18</span>
					<span class="metric-label">i10-index</span>
				</div>
			</div>

			<section class="publications-section">
				<h2>Peer-Reviewed Articles</h2>
				<div class="publication-list">
					<div class="publication-card">
						<div class="pub-header">
							<h3>Monthly 0.05° winter months snow depth dataset for the Northern Hemisphere from 21 CMIP6 models</h3>
							<span class="pub-year">2025</span>
						</div>
