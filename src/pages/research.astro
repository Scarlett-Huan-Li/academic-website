---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={`Research | ${SITE_TITLE}`} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main>
			<h1>Research</h1>
			
			<section class="research-interests">
				<h2>Research Interests</h2>
				<ul>
					<li>Research Area 1: Brief description of this research focus</li>
					<li>Research Area 2: Brief description of another research interest</li>
					<li>Research Area 3: Description of additional research focus</li>
				</ul>
			</section>

			<section class="methodology">
				<h2>Research Methodology</h2>
				<p>Description of your research approach, methodologies, and theoretical frameworks.</p>
				<div class="methodology-grid">
					<div class="method-card">
						<h3>Method 1</h3>
						<p>Description of specific research method or approach.</p>
					</div>
					<div class="method-card">
						<h3>Method 2</h3>
						<p>Description of another research methodology.</p>
					</div>
				</div>
			</section>

			<section class="ongoing-studies">
				<h2>Ongoing Studies</h2>
				{Array(3).fill(null).map((_, i) => (
					<div class="study-card">
						<h3>Study Title {i + 1}</h3>
						<p class="study-meta">Timeline: 2023-2025 | Funding: Source</p>
						<p>Description of the research study, its objectives, and expected outcomes.</p>
						<div class="study-tags">
							<span class="tag">Methodology</span>
							<span class="tag">Field</span>
							<span class="tag">Topic</span>
						</div>
					</div>
				))}
			</section>

			<section class="lab-facilities">
				<h2>Research Facilities</h2>
				<p>Description of your lab facilities, equipment, or research resources.</p>
				<div class="facilities-grid">
					<div class="facility-card">
						<h3>Facility/Equipment 1</h3>
						<p>Description of specific research facility or equipment.</p>
					</div>
					<div class="facility-card">
						<h3>Facility/Equipment 2</h3>
						<p>Description of another research facility or equipment.</p>
					</div>
				</div>
			</section>
		</main>
		<Footer />
	</body>
</html>

<style>
	section {
		margin: 2em 0;
		padding: 1em 0;
		border-top: 1px solid rgb(var(--gray-light));
	}

	.methodology-grid, .facilities-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
		gap: 1.5em;
		margin-top: 1em;
	}

	.method-card, .facility-card {
		padding: 1.5em;
		background-color: white;
		border-radius: 8px;
		box-shadow: var(--box-shadow);
	}

	.study-card {
		margin: 1.5em 0;
		padding: 1.5em;
		background-color: white;
		border-radius: 8px;
		box-shadow: var(--box-shadow);
	}

	.study-meta {
		color: rgb(var(--gray));
		font-size: 0.9em;
		margin: 0.5em 0;
	}

	.study-tags {
		margin-top: 1em;
	}

	.tag {
		display: inline-block;
		padding: 0.3em 0.8em;
		margin: 0.2em;
		background-color: rgb(var(--gray-light));
		border-radius: 15px;
		font-size: 0.8em;
		color: rgb(var(--gray-dark));
	}

	ul {
		list-style-type: none;
		padding: 0;
	}

	li {
		margin: 1em 0;
		padding-left: 1em;
		border-left: 3px solid var(--accent);
	}
</style>